{
  "name": "autotrader",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.5.2",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "corepack pnpm dev",
    "howto": "node scripts/howto.cjs",
    "wallet:new": "corepack pnpm --filter @autotrader/bot wallet:new",
    "dev": "cross-env MODE=paper concurrently -k -n BOT,WEB -c yellow,cyan \"corepack pnpm --filter @autotrader/bot dev\" \"corepack pnpm --filter @autotrader/web dev\"",
    "live": "cross-env MODE=live concurrently -k -n BOT,WEB -c yellow,cyan \"corepack pnpm --filter @autotrader/bot dev\" \"corepack pnpm --filter @autotrader/web dev\"",
    "bot:paper": "cross-env MODE=paper corepack pnpm --filter @autotrader/bot dev",
    "bot:live": "cross-env MODE=live corepack pnpm --filter @autotrader/bot dev",
    "web": "corepack pnpm --filter @autotrader/web dev",
    "db:reset": "corepack pnpm --filter @autotrader/store db:reset",
    "perf": "corepack pnpm --filter @autotrader/store perf",
    "typecheck": "corepack pnpm -r typecheck"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "bufferutil",
      "esbuild",
      "utf-8-validate"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.13.10",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  }
}
